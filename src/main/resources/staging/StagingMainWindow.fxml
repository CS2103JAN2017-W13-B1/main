<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111"
	xmlns:fx="http://javafx.com/fxml/1">
	<center>
		<VBox prefWidth="600.0" BorderPane.alignment="CENTER">
			<children>
				<AnchorPane fx:id="topPlaceholder" prefHeight="400.0"
					prefWidth="600.0" />
				<VBox alignment="BOTTOM_CENTER">
					<children>
						<JFXTextField fx:id="txtCommand" labelFloat="true"
							onKeyPressed="#txtEventOnKeyPressed" onKeyReleased="#txtEventOnKeyReleased"
							prefHeight="35.0" promptText="Enter your commands here..."
							styleClass="subhead">
							<font>
								<Font size="14.0" />
							</font>
							<VBox.margin>
								<Insets top="15.0" />
							</VBox.margin>
						</JFXTextField>
						<Label fx:id="lblSuggestion" minWidth="600.0" prefHeight="27.0"
							textFill="#3c1aff">
							<padding>
								<Insets left="3.0" />
							</padding>
						</Label>
						<JFXTextArea fx:id="txtAreaResults" editable="false"
							focusTraversable="false" promptText="History" styleClass="display1">
							<stylesheets>
								<URL value="@../css/jfoenix-fonts.css" />
								<URL value="@../css/jfoenix-design.css" />
							</stylesheets>
						</JFXTextArea>
					</children>
					<VBox.margin>
						<Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
					</VBox.margin>
				</VBox>
			</children>
		</VBox>
	</center>
	<top>
		<VBox spacing="20">
			<JFXToolbar>
				<leftItems>
					<Label>Î¼Task</Label>
				</leftItems>
				<rightItems>
					<JFXButton prefWidth="60" prefHeight="40" buttonType="RAISED"
						text="Help" style="-fx-background-radius:5em"></JFXButton>
				</rightItems>
			</JFXToolbar>
		</VBox>
	</top>
</BorderPane>
